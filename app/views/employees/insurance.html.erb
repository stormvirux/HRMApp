<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>S#</th>
      <th><%= model_class.human_attribute_name(:empno) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:insuranceno) %></th>
      <th><%= model_class.human_attribute_name(:iidate) %></th>
      <th><%= model_class.human_attribute_name(:iedate) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each_with_index do |employee,i| %>
      <tr>
        <td><%= link_to (i+1), employee_path(employee),{class: "link"}%></td>
        <td><%= employee.empno %></td>
        <td><%= link_to employee.first_name, employee_path(employee),{class: "link"} %></td>
        <td><%= employee.insuranceno %></td>
        <td><%= employee.iidate %></td>
        <td><%= employee.iedate %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_employee_path(employee), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
