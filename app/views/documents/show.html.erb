<%- model_class = Document -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:empno) %>:</strong></dt>
  <dd><%= @document.empno %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sig) %>:</strong></dt>
  <dd><%= cl_image_tag(@document.sig.path,:width => 100, :height => 100,) %></dd> 
  <% if false %>
  <dd><%= image_tag @document.sig_url.to_s %></dd>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name(:passport) %>:</strong></dt>
  <dd><%= cl_image_tag(@document.passport.path,:width => 500, :height => 500,) %></dd> 
  <% if false %>
  <dd><%= image_tag @document.passport_url.to_s %></dd>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name(:iqama) %>:</strong></dt>
  <dd><%= cl_image_tag(@document.iqama.path,:width => 500, :height => 500,) %></dd> 
  <% if false %>
  <dd><%= image_tag @document.iqama_url.to_s %></dd>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name(:visa) %>:</strong></dt>
  <dd><%= cl_image_tag(@document.visa.path,:width => 500, :height => 500,) %></dd> 
  <% if false %>
  <dd><%= image_tag @document.visa_url.to_s %></dd>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              documents_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_document_path(@document), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              document_path(@document),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
