<%- model_class = Contract -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>S#</th>
      <th>Employee No</th>
      <th>Hire Type</th>
      <th>Hire Status</th>
      <th>Contract Start</th>
      <th>Contract End</th>
      <th>Probation Start</th>
      <th>Probation End</th>
      <th>Name Iqama</th>
      <th>Prof Iqama</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @contracts.each_with_index do |contract,i| %>
      <tr>
        <td><%= link_to (i+1), contract_path(contract),{class: "link"} %></td>
        <td><%= contract.empno %></td>
        <td><%= contract.htype %></td>
        <td><%= contract.status %></td>
        <td><%= contract.cstart %></td>
        <td><%= contract.cend %></td>
        <td><%= contract.pstart %></td>
        <td><%= contract.pend %></td>
        <td><%= contract.nameiqama %></td>
        <td><%= contract.proiqama %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_contract_path(contract), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="form-actions">
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_contract_path,
            :class => 'btn btn-primary' %>
<%= link_to "To Excel",contracts_path(format: "xls"),:class => 'btn btn-mini' %>
</div>
