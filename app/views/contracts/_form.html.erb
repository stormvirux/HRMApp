<%= simple_form_for @contract, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.input :empno,collection: Employee.all,label_method: :empno,value_method: :id,:include_blank => false%>
    <%= f.input :htype,collection: ["#"],:include_blank => false%>
    <%= f.input :status,collection: [[ t("helpers.label.contract.single").html_safe,"single"],[ t("helpers.label.contract.family").html_safe,"family"]], as: :radio_buttons%>
    <%= f.input :cstart%>
    <%= f.input :cend%>
    <%= f.input :pstart%>
    <%= f.input :pend%>
    <%= f.input :nameiqama%>
    <%= f.input :proiqama%>
  </div>

  <div class="form-actions">
    <%= f.button :submit ,:class => 'btn btn-primary'%>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                contracts_path, :class => 'btn' %>
  </div>
<% end %>
