<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset4">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.label :Username %>
      <%= f.text_field :name %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <div>
      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
      </div>
   <% end %>
   </div>
</div>
