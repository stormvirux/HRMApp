<%= simple_form_for @education, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.input :empno,collection: Employee.all,label_method: :empno,value_method: :id,label: "Employee Name" ,:include_blank => false%>
    <%= f.input :edtype,collection: ["#"]%>
    <%= f.input :degyear,collection: 1947...2020%>
    <%= f.input :deg,collection: ["#"]%>
    <%= f.input :special%>
    <%= f.input :verified%>
    <%= f.input :verby,collection: ["#"]%>
  </div>

  <div class="form-actions">
    <%= f.button :submit ,:class => 'btn btn-primary'%>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                educations_path, :class => 'btn' %>
  </div>
<% end %>
