<%- model_class = Vehicle -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<br/>
<br/>
  <h5>Vehicle Details</h5>
  <br/>

<table class="table table-striped">
  <tr>
    <td><%= model_class.human_attribute_name(:reg) %></td>
    <td><%= @vehicle.reg %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:model) %></td>
    <td><%= @vehicle.model %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:isthiedate) %></td>
    <td><%= @vehicle.isthiedate %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:dname) %></td>
    <td><%= @vehicle.dname %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:nextsdate) %></td>
    <td><%= @vehicle.nextsdate %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:remarks) %></td>
    <td><%= @vehicle.remarks %></td>
  </tr>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              vehicles_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_vehicle_path(@vehicle), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              vehicle_path(@vehicle),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
