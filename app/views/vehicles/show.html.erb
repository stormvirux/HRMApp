<%- model_class = Vehicle -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:reg) %>:</strong></dt>
  <dd><%= @vehicle.reg %></dd>
  <dt><strong><%= model_class.human_attribute_name(:model) %>:</strong></dt>
  <dd><%= @vehicle.model %></dd>
  <dt><strong><%= model_class.human_attribute_name(:isthiedate) %>:</strong></dt>
  <dd><%= @vehicle.isthiedate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dname) %>:</strong></dt>
  <dd><%= @vehicle.dname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nextsdate) %>:</strong></dt>
  <dd><%= @vehicle.nextsdate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:remarks) %>:</strong></dt>
  <dd><%= @vehicle.remarks %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              vehicles_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_vehicle_path(@vehicle), :class => 'btn' %>
  <%= button_to t('.destroy', :default => t("helpers.links.destroy")),
              vehicle_path(@vehicle),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
